{
  "framework": "mocha",
  "src_files": [
    "src/**/*.js",
    "test/*.test.js"
  ],
  "serve_files": [
    "node_modules/chai/chai.js",
    "node_modules/loader.js/lib/loader/loader.js",
    "dist/test.js",
    "vendor/test.js"
  ],
  "before_tests": "./node_modules/.bin/rollup -c rollup.config.test.js",
  "launch_in_dev": [
    "Mocha",
    "PhantomJS",
    "Chrome"
  ],
  "launch_in_ci": [
    "Mocha",
    "Chrome"
  ],
  "launchers": {
    "Mocha": {
      "command": "./node_modules/.bin/mocha --compilers js:babel-register -R tap test/*.test.js",
      "protocol": "tap"
    }
  }
}
